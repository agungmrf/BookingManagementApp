@{
    ViewData["Title"] = "Home Page";
    Layout = "_AdminLayout";
}
<img src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/98/International_Pok%C3%A9mon_logo.svg/2560px-International_Pok%C3%A9mon_logo.svg.png" class="rounded mx-auto d-block" width="500" height="200" alt="">
<div class="container-fluid mt-4">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Pokemon</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered dataTable" id="pokeTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                                <thead>
                                <tr role="row">
                                    <th class="sorting sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="No: activate to sort column descending" style="width: 32px;">No</th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="NIK: activate to sort column ascending" style="width: 35px;">Nama</th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Action: activate to sort column ascending" style="width: 90px;">Action</th>
                                </tr>
                                </thead>
                                <tbody id="tbodyPoke">
                                </tbody>
                            </table>
                            <!-- Modal -->
                            <div class="modal fade" id="modalPoke" tabindex="-1" role="dialog" aria-labelledby="pokeModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="pokeModalLabel">Pokemon</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body" id="modalBody">
                                            <div class="col">
                                                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                                                    <div id="carouselExample" class="carousel slide" data-ride="carousel">
                                                        <div class="carousel-inner">
                                                            <div class="carousel-item active">
                                                                <img src="" class="d-block w-100" alt="..." id="pokemonFirst">
                                                            </div>
                                                            <div class="carousel-item">
                                                                <img src="" class="d-block w-100" alt="..." id="pokemonSec">
                                                            </div>
                                                            <div class="carousel-item">
                                                                <img src="" class="d-block w-100" alt="..." id="pokemonThird">
                                                            </div>
                                                        </div>
                                                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                            <span class="visually-hidden">Previous</span>
                                                        </button>
                                                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                            <span class="visually-hidden">Next</span>
                                                        </button>
                                                    </div>
                                                </div>
                                                <div class="modalTypesContainer">
                                                    <p id="modalTypes">
                                                        <span class="badge bg-orange">Type 1</span>
                                                        <span class="badge bg-blue">Type 2</span>
                                                    </p>
                                                </div>
                                                <div class="pokemon-ability-info color-bg color-lightblue match active">
                                                    <div class="column-7">
                                                        <div class="attribute">
                                                            <span class="attribute-title">Height</span>
                                                            <span class="attribute-value" id="modalHeight">3' 11"</span>
                                                        </div>
                                                        <div class="attribute">
                                                            <span class="attribute-title">Weight</span>
                                                            <span class="attribute-value" id="modalWeight">79.4 lbs</span>
                                                        </div>
                                                        <div class="attribute">
                                                            <span class="attribute-title">Gender</span>
                                                            <span class="attribute-value" style="margin-bottom: 1em;" id="modalGender">Unknown</span>
                                                        </div>
                                                    </div>
                                                    <div class="column-7 push-7">
                                                        <div class="attribute">
                                                            <span class="attribute-title">Category</span>
                                                            <span class="attribute-value" id="modalCategory">Paradox</span>
                                                        </div>
                                                        <div class="attribute">
                                                            <span class="attribute-title">Abilities</span>
                                                            <span class="attribute-value" id="modalAbilities">Quark Drive</span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="progress mt-3" role="progressbar" aria-label="Base Experience" aria-valuemin="0" aria-valuemax="100">
                                                    <div id="hp" class="progress-bar bg-secondary progress-bar-striped progress-bar-animated" style="width: 0%;">
                                                        <p class="progress-text mb-0"></p>
                                                    </div>
                                                </div>
                                                <div class="progress mt-3" role="progressbar" aria-label="Base Experience" aria-valuemin="0" aria-valuemax="100">
                                                    <div id="attack" class="progress-bar bg-dark progress-bar-striped progress-bar-animated" style="width: 0%;">
                                                        <p class="progress-text mb-0"></p>
                                                    </div>
                                                </div>
                                                <div class="progress mt-3" role="progressbar" aria-label="Base Experience" aria-valuemin="0" aria-valuemax="100">
                                                    <div id="defense" class="progress-bar bg-danger progress-bar-striped progress-bar-animated" style="width: 0%;">
                                                        <p class="progress-text mb-0"></p>
                                                    </div>
                                                </div>
                                                <div class="progress mt-3" role="progressbar" aria-label="Base Experience" aria-valuemin="0" aria-valuemax="100">
                                                    <div id="special-attack" class="progress-bar bg-warning progress-bar-striped progress-bar-animated" style="width: 0%;">
                                                        <p class="progress-text mb-0"></p>
                                                    </div>
                                                </div>
                                                <div class="progress mt-3" role="progressbar" aria-label="Base Experience" aria-valuemin="0" aria-valuemax="100">
                                                    <div id="special-defense" class="progress-bar bg-info progress-bar-striped progress-bar-animated" style="width: 0%;">
                                                        <p class="progress-text mb-0"></p>
                                                    </div>
                                                </div>
                                                <div class="progress mt-3" role="progressbar" aria-label="Base Experience" aria-valuemin="0" aria-valuemax="100">
                                                    <div id="speed" class="progress-bar bg-success progress-bar-striped progress-bar-animated" style="width: 0%;">
                                                        <p class="progress-text mb-0"></p>
                                                    </div>
                                                </div>
                                                <div class="modalTypesContainer">
                                                    <p>Moves</p>
                                                    <table class="table">
                                                        <thead>
                                                        <tr>
                                                            <th>No</th>
                                                            <th>Moves</th>
                                                        </tr>
                                                        </thead>
                                                        <tbody id="modalMoves">
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                            <!-- Modal footer -->
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                <!-- Jika Anda ingin menambahkan tombol "Save Changes", tambahkan di sini -->
                                                <!-- <button type="button" class="btn btn-primary">Save Changes</button> -->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section CssSection{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css"/>
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.dataTables.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
}

@section Scripts{
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
}